---
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
} from "./ui/card";
import { Badge } from "./ui/badge";
import { Button } from "./ui/button";

const projects = [
    {
        title: "E-Commerce Platform",
        description:
            "A full-stack e-commerce solution with payment integration, user authentication, and admin dashboard.",
        tags: ["React", "Node.js", "PostgreSQL", "Stripe"],
        link: "#",
        github: "#",
    },
    {
        title: "Task Management App",
        description:
            "A collaborative task management application with real-time updates, drag-and-drop functionality, and team features.",
        tags: ["Next.js", "TypeScript", "Prisma", "WebSocket"],
        link: "#",
        github: "#",
    },
    {
        title: "Weather Dashboard",
        description:
            "A beautiful weather dashboard that displays current conditions, forecasts, and historical data with interactive charts.",
        tags: ["Astro", "React", "TailwindCSS", "API"],
        link: "#",
        github: "#",
    },
    {
        title: "Portfolio CMS",
        description:
            "A headless CMS built for portfolio websites with markdown support, media management, and API endpoints.",
        tags: ["Python", "FastAPI", "MongoDB", "Docker"],
        link: "#",
        github: "#",
    },
    {
        title: "Social Media Analytics",
        description:
            "An analytics platform for tracking social media metrics across multiple platforms with custom reporting.",
        tags: ["Vue.js", "Express", "Redis", "Chart.js"],
        link: "#",
        github: "#",
    },
    {
        title: "AI Chat Assistant",
        description:
            "An intelligent chatbot powered by AI that can answer questions, provide recommendations, and assist users.",
        tags: ["React", "OpenAI", "Node.js", "Vector DB"],
        link: "#",
        github: "#",
    },
];
---

<section id="projects" class="container max-w-screen-2xl px-4 py-16 md:py-24">
    <div class="mb-12 text-center">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl">
            Featured Projects
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
            Here are some of my recent projects that showcase my skills and
            experience.
        </p>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {
            projects.map((project) => (
                <Card client:load className="flex flex-col">
                    <CardHeader>
                        <CardTitle>{project.title}</CardTitle>
                        <CardDescription>{project.description}</CardDescription>
                    </CardHeader>
                    <CardContent className="flex-1">
                        <div class="flex flex-wrap gap-2">
                            {project.tags.map((tag) => (
                                <Badge client:load variant="secondary">
                                    {tag}
                                </Badge>
                            ))}
                        </div>
                    </CardContent>
                    <CardFooter className="flex gap-2">
                        <Button client:load variant="default" size="sm">
                            <a
                                href={project.link}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center gap-2"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                    <polyline points="15 3 21 3 21 9" />
                                    <line x1="10" y1="14" x2="21" y2="3" />
                                </svg>
                                Demo
                            </a>
                        </Button>
                        <Button client:load variant="outline" size="sm">
                            <a
                                href={project.github}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center gap-2"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                                    <path d="M9 18c-4.51 2-5-2-7-2" />
                                </svg>
                                Code
                            </a>
                        </Button>
                    </CardFooter>
                </Card>
            ))
        }
    </div>
</section>
