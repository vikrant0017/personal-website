---
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
} from "./ui/card";
import { Badge } from "./ui/badge";
import { Button } from "./ui/button";
import { loadResumeData } from "../lib/resume";

const resumeData = loadResumeData();
const projects = resumeData.projects || [];

// Helper function to extract technologies from description if not provided separately
const getTechnologies = (project: any): string[] => {
    // If project has explicit tech tags, use those
    if (project.technologies) {
        return project.technologies;
    }

    // Otherwise, try to extract from description
    const allText = [project.summary, ...(project.description || [])].join(" ");
    const techKeywords = [
        "Python",
        "TypeScript",
        "JavaScript",
        "React",
        "FastAPI",
        "Electron",
        "Node.js",
        "Vue.js",
        "Next.js",
        "Docker",
        "MongoDB",
        "PostgreSQL",
        "Redis",
        "MySQL",
        "Langchain",
        "Ollama",
        "Chrome",
        "Vite",
        "TailwindCSS",
        "API",
    ];

    return techKeywords
        .filter((tech) => allText.toLowerCase().includes(tech.toLowerCase()))
        .slice(0, 5); // Limit to 5 tags
};

// Format GitHub link
const formatLink = (link?: string): string => {
    if (!link) return "#";
    if (link.startsWith("http://") || link.startsWith("https://")) {
        return link;
    }
    if (link.startsWith("github.com/")) {
        return `https://${link}`;
    }
    return `https://${link}`;
};
---

<section id="projects" class="container max-w-screen-2xl px-4 py-16 md:py-24">
    <div class="mb-12 text-center">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl">
            Featured Projects
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
            {
                projects.length > 0
                    ? "Here are some of my recent projects that showcase my skills and experience."
                    : "Projects coming soon! Check back later."
            }
        </p>
    </div>

    {
        projects.length > 0 && (
            <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {projects.map((project) => {
                    const technologies = getTechnologies(project);
                    const projectLink = formatLink(project.link);

                    return (
                        <Card client:load className="flex flex-col">
                            <CardHeader>
                                <CardTitle>{project.name}</CardTitle>
                                {project.summary && (
                                    <CardDescription>
                                        {project.summary}
                                    </CardDescription>
                                )}
                            </CardHeader>
                            <CardContent className="flex-1">
                                {project.description &&
                                    project.description.length > 0 && (
                                        <ul class="mb-4 space-y-1 text-sm text-muted-foreground">
                                            {project.description
                                                .slice(0, 3)
                                                .map((desc) => (
                                                    <li class="flex gap-2">
                                                        <span class="text-primary">
                                                            â€¢
                                                        </span>
                                                        <span>{desc}</span>
                                                    </li>
                                                ))}
                                        </ul>
                                    )}
                                {technologies.length > 0 && (
                                    <div class="flex flex-wrap gap-2">
                                        {technologies.map((tag) => (
                                            <Badge
                                                client:load
                                                variant="secondary"
                                            >
                                                {tag}
                                            </Badge>
                                        ))}
                                    </div>
                                )}
                            </CardContent>
                            <CardFooter className="flex gap-2">
                                {project.link && (
                                    <Button
                                        client:load
                                        variant="default"
                                        size="sm"
                                    >
                                        <a
                                            href={projectLink}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="flex items-center gap-2"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="16"
                                                height="16"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                                                <path d="M9 18c-4.51 2-5-2-7-2" />
                                            </svg>
                                            {projectLink.includes("github.com")
                                                ? "GitHub"
                                                : "View"}
                                        </a>
                                    </Button>
                                )}
                            </CardFooter>
                        </Card>
                    );
                })}
            </div>
        )
    }
</section>
