---
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
} from "./ui/card";
import { Badge } from "./ui/badge";
import { Button } from "./ui/button";
import { loadResumeData } from "../lib/resume";

const resumeData = loadResumeData();
const projects = resumeData.projects || [];

// Get GitHub repos URL from personal data
const githubReposUrl = resumeData.personal?.github
    ? `https://${resumeData.personal.github.replace(/^https?:\/\/(www\.)?github\.com\//, "")}?tab=repositories`
    : "https://github.com";

// Helper function to extract technologies from description if not provided separately
const getTechnologies = (project: any): string[] => {
    // If project has explicit tech tags, use those
    if (project.technologies) {
        return project.technologies;
    }

    // Otherwise, try to extract from description
    const allText = [project.summary, ...(project.description || [])].join(" ");
    const techKeywords = [
        "Python",
        "TypeScript",
        "JavaScript",
        "React",
        "FastAPI",
        "Electron",
        "Node.js",
        "Vue.js",
        "Next.js",
        "Docker",
        "MongoDB",
        "PostgreSQL",
        "Redis",
        "MySQL",
        "Langchain",
        "Ollama",
        "Chrome",
        "Vite",
        "TailwindCSS",
        "API",
    ];

    return techKeywords
        .filter((tech) => allText.toLowerCase().includes(tech.toLowerCase()))
        .slice(0, 5); // Limit to 5 tags
};

// Format GitHub link
const formatLink = (link?: string): string => {
    if (!link) return "#";
    if (link.startsWith("http://") || link.startsWith("https://")) {
        return link;
    }
    if (link.startsWith("github.com/")) {
        return `https://${link}`;
    }
    return `https://${link}`;
};
---

<section id="projects" class="container max-w-screen-2xl px-4 py-16 md:py-24">
    <div class="mb-12 text-center">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl">
            Featured Projects
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
            {
                projects.length > 0
                    ? "Here are some of my recent projects that showcase my skills and experience."
                    : "Projects coming soon! Check back later."
            }
        </p>
    </div>

    {
        projects.length > 0 && (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-20">
                {projects.map((project) => {
                    const technologies = getTechnologies(project);
                    const projectLink = formatLink(project.link);

                    return (
                        <div class="group h-full">
                            <Card
                                client:load
                                className="h-full flex flex-col transition-all duration-300 hover:shadow-xl hover:-translate-y-1 border-2 hover:border-primary/50"
                            >
                                <CardHeader className="space-y-3">
                                    <div class="flex items-start justify-between gap-2">
                                        <div class="flex-1">
                                            <CardTitle className="text-xl group-hover:text-primary transition-colors">
                                                {project.name}
                                            </CardTitle>
                                        </div>
                                        <div class="rounded-full bg-primary/10 p-2 group-hover:bg-primary/20 transition-colors">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="20"
                                                height="20"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                class="text-primary"
                                            >
                                                <rect
                                                    width="18"
                                                    height="18"
                                                    x="3"
                                                    y="3"
                                                    rx="2"
                                                />
                                                <path d="M7 7h10" />
                                                <path d="M7 12h10" />
                                                <path d="M7 17h10" />
                                            </svg>
                                        </div>
                                    </div>
                                    {project.summary && (
                                        <CardDescription className="text-base leading-relaxed">
                                            {project.summary}
                                        </CardDescription>
                                    )}
                                </CardHeader>
                                <CardContent className="flex-1 space-y-4">
                                    {technologies.length > 0 && (
                                        <div class="flex flex-wrap gap-2">
                                            {technologies.map((tag) => (
                                                <Badge
                                                    client:load
                                                    variant="secondary"
                                                    className="text-xs font-medium px-2.5 py-0.5"
                                                >
                                                    {tag}
                                                </Badge>
                                            ))}
                                        </div>
                                    )}
                                </CardContent>
                                <CardFooter className="pt-4 border-t">
                                    {project.link && (
                                        <Button
                                            client:load
                                            variant="default"
                                            size="sm"
                                            className="w-full group/btn"
                                        >
                                            <a
                                                href={projectLink}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="flex items-center justify-center gap-2 w-full"
                                            >
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="16"
                                                    height="16"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    class="transition-transform group-hover/btn:translate-x-0.5"
                                                >
                                                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                                                    <path d="M9 18c-4.51 2-5-2-7-2" />
                                                </svg>
                                                {projectLink.includes(
                                                    "github.com",
                                                )
                                                    ? "View on GitHub"
                                                    : "View Project"}
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="14"
                                                    height="14"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    class="transition-transform group-hover/btn:translate-x-1 group-hover/btn:-translate-y-1"
                                                >
                                                    <path d="M7 7h10v10" />
                                                    <path d="M7 17 17 7" />
                                                </svg>
                                            </a>
                                        </Button>
                                    )}
                                </CardFooter>
                            </Card>
                        </div>
                    );
                })}
            </div>
        )
    }

    {
        projects.length > 0 && (
            <div class="mt-12 flex justify-center">
                <div class="inline-flex items-center gap-3 rounded-lg border bg-card p-4 shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex items-center gap-2 text-sm text-muted-foreground">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-primary"
                        >
                            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                            <path d="M9 18c-4.51 2-5-2-7-2" />
                        </svg>
                        <span class="font-medium">Want to see more?</span>
                    </div>
                    <Button
                        client:load
                        variant="outline"
                        size="sm"
                        className="group/more"
                    >
                        <a
                            href={githubReposUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-2"
                        >
                            View All Projects
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="transition-transform group-hover/more:translate-x-1"
                            >
                                <path d="M5 12h14" />
                                <path d="m12 5 7 7-7 7" />
                            </svg>
                        </a>
                    </Button>
                </div>
            </div>
        )
    }
</section>
