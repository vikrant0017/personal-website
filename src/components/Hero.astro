---
import { Button } from "./ui/button";
import { loadResumeData } from "../lib/resume";

const resumeData = loadResumeData();
const personal = resumeData.personal || {};
const summary = resumeData.summary || {};

const name = personal.name || "Your Name";
const summaryText =
    summary.text ||
    "I'm a full-stack developer passionate about building beautiful and functional web applications. I specialize in modern web technologies and love turning ideas into reality.";
---

<section
    class="container flex max-w-screen-2xl flex-col items-center justify-center gap-8 px-4 py-24 md:py-32 lg:py-40"
>
    <div class="flex max-w-5xl flex-col items-center gap-4 text-center">
        <h1
            class="text-4xl font-extrabold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl"
        >
            Hi, I'm <span class="text-primary">{name}</span>
        </h1>
        <p
            class="max-w-2xl text-lg leading-normal text-muted-foreground sm:text-xl sm:leading-8"
        >
            {summaryText}
        </p>
        <div class="flex gap-4">
            <Button client:load size="lg">
                <a href="#projects">View Projects</a>
            </Button>
            <Button client:load variant="outline" size="lg">
                <a href="#contact">Get in Touch</a>
            </Button>
        </div>
    </div>

    {
        personal.location && (
            <div class="mt-8 flex flex-wrap items-center justify-center gap-4">
                <div class="flex items-center gap-2 rounded-lg border bg-card px-4 py-2 text-card-foreground">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z" />
                        <circle cx="12" cy="10" r="3" />
                    </svg>
                    <span class="text-sm font-medium">{personal.location}</span>
                </div>
            </div>
        )
    }
</section>
