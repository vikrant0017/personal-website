---
import "../styles/global.css";
import ThemeScript from "../components/ThemeScript.astro";
import { ThemeToggle } from "../components/ThemeToggle";
import { loadResumeData } from "../lib/resume";

interface Props {
    title?: string;
    description?: string;
}

const resumeData = loadResumeData();
const personal = resumeData.personal || {};
const siteName = personal.name || "Portfolio";
const defaultTitle = personal.name
    ? `${personal.name} | Portfolio`
    : "Portfolio";

const { title = defaultTitle, description = "My personal portfolio site" } =
    Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <ThemeScript />
    </head>
    <body class="min-h-screen bg-background font-sans antialiased">
        <header
            class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-backdrop-filter-:bg-background/60"
        >
            <div
                class="container flex h-16 max-w-screen-2xl items-center justify-between px-4"
            >
                <a href="/" class="text-xl font-bold">{siteName}</a>
                <div class="flex items-center gap-6">
                    <nav class="flex gap-6">
                        <a
                            href="#about"
                            class="text-sm font-medium transition-colors hover:text-primary"
                            >About</a
                        >
                        <a
                            href="#projects"
                            class="text-sm font-medium transition-colors hover:text-primary"
                            >Projects</a
                        >
                        <a
                            href="#contact"
                            class="text-sm font-medium transition-colors hover:text-primary"
                            >Contact</a
                        >
                    </nav>
                    <ThemeToggle client:load />
                </div>
            </div>
        </header>

        <main>
            <slot />
        </main>

        <footer class="border-t border-border/40 py-6 md:py-0">
            <div
                class="container flex h-24 max-w-screen-2xl flex-col items-center justify-center gap-4 px-4 md:flex-row md:justify-between"
            >
                <p
                    class="text-center text-sm leading-loose text-muted-foreground md:text-left"
                >
                    Built with <a
                        href="https://astro.build"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="font-medium underline underline-offset-4"
                        >Astro</a
                    > and <a
                        href="https://ui.shadcn.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="font-medium underline underline-offset-4"
                        >shadcn/ui</a
                    >
                </p>
                <p class="text-sm text-muted-foreground">
                    Â© {new Date().getFullYear()} All rights reserved.
                </p>
            </div>
        </footer>
    </body>
</html>
